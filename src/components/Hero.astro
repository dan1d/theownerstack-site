<section class="relative min-h-screen flex items-center justify-center bg-primary-950 pt-24 pb-16 md:pt-32 md:pb-24 lg:pt-40 lg:pb-32 overflow-hidden">
  <!-- Background gradient -->
  <div class="absolute inset-0 bg-[radial-gradient(ellipse_80%_60%_at_50%_-10%,rgba(59,106,173,0.25),transparent)]"></div>

  <!-- Subtle grid pattern -->
  <div class="absolute inset-0 opacity-[0.03]" style="background-image: repeating-linear-gradient(0deg, rgba(255,255,255,0.1) 0px, transparent 1px, transparent 60px), repeating-linear-gradient(90deg, rgba(255,255,255,0.1) 0px, transparent 1px, transparent 60px);"></div>

  <div class="relative z-10 max-w-[1200px] mx-auto px-5 md:px-8 text-center">
    <!-- Badge -->
    <div class="inline-flex items-center gap-2 px-4 py-2 rounded-full bg-white/10 border border-white/15 text-xs font-medium text-primary-300">
      <svg class="w-4 h-4 text-accent-400" fill="none" stroke="currentColor" viewBox="0 0 24 24" stroke-width="2">
        <path stroke-linecap="round" stroke-linejoin="round" d="M13 10V3L4 14h7v7l9-11h-7z"/>
      </svg>
      Tools for business owners &amp; the Ruby ecosystem
    </div>

    <!-- Headline -->
    <h1 class="mt-8 text-4xl sm:text-5xl md:text-6xl lg:text-7xl font-bold text-white leading-[1.08] tracking-tight">
      We Build. We Ship.
      <br class="hidden sm:block" />
      <span class="text-accent-400">We Contribute.</span>
    </h1>

    <!-- Subheadline -->
    <p class="mt-6 text-lg md:text-xl text-primary-400 leading-relaxed max-w-[640px] mx-auto">
      TheOwnerStack builds automation tools for small businesses
      and open-source infrastructure for the Ruby ecosystem.
    </p>

    <!-- CTAs -->
    <div class="flex flex-col sm:flex-row items-center justify-center gap-4 mt-10">
      <a
        href="#products"
        class="inline-flex items-center px-8 py-4 rounded-xl bg-accent-500 hover:bg-accent-600 text-white font-semibold text-base shadow-[var(--shadow-cta)] hover:shadow-[var(--shadow-cta-hover)] transition-all duration-200 hover:-translate-y-0.5"
      >
        Explore Our Products
        <svg class="w-5 h-5 ml-2" fill="none" stroke="currentColor" viewBox="0 0 24 24" stroke-width="2">
          <path stroke-linecap="round" stroke-linejoin="round" d="M19 9l-7 7-7-7"/>
        </svg>
      </a>
      <a
        href="https://github.com/dan1d"
        target="_blank"
        rel="noopener noreferrer"
        class="inline-flex items-center px-8 py-4 rounded-xl bg-transparent border border-white/20 hover:border-white/40 text-white/80 hover:text-white font-medium text-base transition-all duration-200"
        aria-label="View TheOwnerStack on GitHub (opens in new tab)"
      >
        <svg class="w-5 h-5 mr-2" fill="currentColor" viewBox="0 0 24 24">
          <path fill-rule="evenodd" clip-rule="evenodd" d="M12 2C6.477 2 2 6.484 2 12.017c0 4.425 2.865 8.18 6.839 9.504.5.092.682-.217.682-.483 0-.237-.008-.868-.013-1.703-2.782.605-3.369-1.343-3.369-1.343-.454-1.158-1.11-1.466-1.11-1.466-.908-.62.069-.608.069-.608 1.003.07 1.531 1.032 1.531 1.032.892 1.53 2.341 1.088 2.91.832.092-.647.35-1.088.636-1.338-2.22-.253-4.555-1.113-4.555-4.951 0-1.093.39-1.988 1.029-2.688-.103-.253-.446-1.272.098-2.65 0 0 .84-.27 2.75 1.026A9.564 9.564 0 0112 6.844c.85.004 1.705.115 2.504.337 1.909-1.296 2.747-1.027 2.747-1.027.546 1.379.202 2.398.1 2.651.64.7 1.028 1.595 1.028 2.688 0 3.848-2.339 4.695-4.566 4.943.359.309.678.92.678 1.855 0 1.338-.012 2.419-.012 2.747 0 .268.18.58.688.482A10.019 10.019 0 0022 12.017C22 6.484 17.522 2 12 2z"/>
        </svg>
        View on GitHub
      </a>
    </div>
  </div>

  <!-- Bottom fade to white -->
  <div class="absolute bottom-0 left-0 right-0 h-24 bg-gradient-to-b from-transparent to-white"></div>
</section>
