    <!-- Headline -->
    <h1 class="mt-8 text-4xl sm:text-5xl md:text-6xl lg:text-7xl font-bold text-white leading-[1.08] tracking-tight">
      Your Clover Sales,
      <br class="hidden sm:block" />
      in QuickBooks,
      <br class="hidden sm:block" />
      <span class="text-accent-400">Every Morning.</span>
    </h1>

    <!-- Subheadline -->
    <p class="mt-6 text-lg md:text-xl text-primary-400 leading-relaxed max-w-[580px] mx-auto">
      Stop spending hours re-entering daily sales. Sync Commerce connects your
      Clover POS to QuickBooks Online automatically â€” with AI-powered mapping.
    </p>

    <!-- Trust line -->
    <p class="mt-4 text-sm text-primary-500">
      Free for 1 location &middot; No credit card required &middot; 5-minute setup
    </p>

    <!-- CTAs -->
    <div class="flex flex-col sm:flex-row items-center justify-center gap-4 mt-8">
      <a
        href="#pricing"
        class="inline-flex items-center px-8 py-4 rounded-xl bg-accent-500 hover:bg-accent-600 text-white font-semibold text-base shadow-[var(--shadow-cta)] hover:shadow-[var(--shadow-cta-hover)] transition-all duration-200 hover:-translate-y-0.5"
      >
        Get Started Free
        <svg class="w-5 h-5 ml-2" fill="none" stroke="currentColor" viewBox="0 0 24 24" stroke-width="2">
          <path stroke-linecap="round" stroke-linejoin="round" d="M17 8l4 4m0 0l-4 4m4-4H3"/>
        </svg>
      </a>
      <a
        href="#how-it-works"
        class="inline-flex items-center px-8 py-4 rounded-xl bg-transparent border border-white/20 hover:border-white/40 text-white/80 hover:text-white font-medium text-base transition-all duration-200"
      >
        See How It Works
        <svg class="w-5 h-5 ml-2" fill="none" stroke="currentColor" viewBox="0 0 24 24" stroke-width="2">
          <path stroke-linecap="round" stroke-linejoin="round" d="M19 9l-7 7-7-7"/>
        </svg>
      </a>
    </div>
  </div>

  <!-- Bottom fade to white -->
  <div class="absolute bottom-0 left-0 right-0 h-24 bg-gradient-to-b from-transparent to-white"></div>
</section>
