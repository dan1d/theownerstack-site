---
const currentYear = new Date().getFullYear();

const productLinks = [
  { label: 'Sync Commerce', href: '#products' },
  { label: 'VulnSentry', href: 'https://vulnsentry.com', external: true },
];

const ossLinks = [
  { label: 'linear_api', href: 'https://github.com/dan1d/linear-ruby', external: true },
  { label: 'clover_sandbox_simulator', href: 'https://github.com/dan1d/clover_sandbox_simulator', external: true },
  { label: 'omniauth-clover-oauth2', href: 'https://github.com/dan1d/omniauth-clover-oauth2', external: true },
  { label: 'omniauth-qbo-modern', href: 'https://github.com/dan1d/omniauth-quickbooks-oauth2-modern', external: true },
];

const companyLinks = [
  { label: 'About', href: '#about' },
  { label: 'GitHub', href: 'https://github.com/dan1d', external: true },
];
---

<!-- Footer CTA -->
<section id="cta" class="relative bg-primary-950 py-20 md:py-28 text-center overflow-hidden">
  <div class="absolute inset-0 bg-[radial-gradient(ellipse_70%_50%_at_50%_100%,rgba(59,106,173,0.2),transparent)]"></div>
  <div class="relative z-10 max-w-[1200px] mx-auto px-5 md:px-8">
    <h2 class="text-3xl md:text-4xl font-bold text-white" data-reveal>
      Ready to automate your bookkeeping?
    </h2>
    <p class="text-lg text-primary-400 mt-4 max-w-[480px] mx-auto" data-reveal>
      Join small business owners who sync their sales data automatically.
    </p>
    <div class="mt-8" data-reveal>
      <a
        href="#products"
        class="inline-flex items-center px-8 py-4 rounded-xl bg-accent-500 hover:bg-accent-600 text-white font-semibold text-base shadow-[var(--shadow-cta)] hover:shadow-[var(--shadow-cta-hover)] transition-all duration-200 hover:-translate-y-0.5"
      >
        Get Started Free
      </a>
    </div>
    <p class="text-sm text-primary-500 mt-4" data-reveal>
      No credit card required &middot; 5 minute setup
    </p>
  </div>
</section>

<!-- Footer -->
<footer class="bg-primary-900 border-t border-white/[0.06] pt-16 pb-8">
  <div class="max-w-[1200px] mx-auto px-5 md:px-8">
    <div class="grid grid-cols-2 md:grid-cols-4 gap-8">
      <!-- Brand -->
      <div class="col-span-2 md:col-span-1">
        <a href="/" class="text-lg font-bold text-white tracking-tight">TheOwnerStack</a>
        <p class="text-sm text-primary-400 mt-2">Tools for business owners &amp; the Ruby ecosystem.</p>
        <div class="flex gap-3 mt-4">
          <a
            href="https://github.com/dan1d"
            target="_blank"
            rel="noopener noreferrer"
            class="text-primary-500 hover:text-white transition-colors"
            aria-label="GitHub (opens in new tab)"
          >
            <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24">
              <path fill-rule="evenodd" clip-rule="evenodd" d="M12 2C6.477 2 2 6.484 2 12.017c0 4.425 2.865 8.18 6.839 9.504.5.092.682-.217.682-.483 0-.237-.008-.868-.013-1.703-2.782.605-3.369-1.343-3.369-1.343-.454-1.158-1.11-1.466-1.11-1.466-.908-.62.069-.608.069-.608 1.003.07 1.531 1.032 1.531 1.032.892 1.53 2.341 1.088 2.91.832.092-.647.35-1.088.636-1.338-2.22-.253-4.555-1.113-4.555-4.951 0-1.093.39-1.988 1.029-2.688-.103-.253-.446-1.272.098-2.65 0 0 .84-.27 2.75 1.026A9.564 9.564 0 0112 6.844c.85.004 1.705.115 2.504.337 1.909-1.296 2.747-1.027 2.747-1.027.546 1.379.202 2.398.1 2.651.64.7 1.028 1.595 1.028 2.688 0 3.848-2.339 4.695-4.566 4.943.359.309.678.92.678 1.855 0 1.338-.012 2.419-.012 2.747 0 .268.18.58.688.482A10.019 10.019 0 0022 12.017C22 6.484 17.522 2 12 2z"/>
            </svg>
          </a>
        </div>
      </div>

      <!-- Products -->
      <div>
        <h5 class="text-xs font-semibold uppercase tracking-widest text-primary-400 mb-4">Products</h5>
        <ul class="space-y-2">
          {productLinks.map((link) => (
            <li>
              <a
                href={link.href}
                target={link.external ? '_blank' : undefined}
                rel={link.external ? 'noopener noreferrer' : undefined}
                class="text-sm text-primary-300 hover:text-white transition-colors"
              >
                {link.label}
              </a>
            </li>
          ))}
        </ul>
      </div>

      <!-- Open Source -->
      <div>
        <h5 class="text-xs font-semibold uppercase tracking-widest text-primary-400 mb-4">Open Source</h5>
        <ul class="space-y-2">
          {ossLinks.map((link) => (
            <li>
              <a
                href={link.href}
                target="_blank"
                rel="noopener noreferrer"
                class="text-sm text-primary-300 hover:text-white transition-colors font-mono"
              >
                {link.label}
              </a>
            </li>
          ))}
        </ul>
      </div>

      <!-- Company -->
      <div>
        <h5 class="text-xs font-semibold uppercase tracking-widest text-primary-400 mb-4">Company</h5>
        <ul class="space-y-2">
          {companyLinks.map((link) => (
            <li>
              <a
                href={link.href}
                target={link.external ? '_blank' : undefined}
                rel={link.external ? 'noopener noreferrer' : undefined}
                class="text-sm text-primary-300 hover:text-white transition-colors"
              >
                {link.label}
              </a>
            </li>
          ))}
        </ul>
      </div>
    </div>

    <!-- Bottom bar -->
    <div class="mt-12 pt-6 border-t border-white/[0.08] flex flex-col md:flex-row justify-between items-center gap-2">
      <p class="text-xs text-primary-500">&copy; {currentYear} The Owner Stack, LLC. All rights reserved.</p>
      <p class="text-xs text-primary-500">Built with Astro</p>
    </div>
  </div>
</footer>
