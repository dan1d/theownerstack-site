---
interface Props {
  name: string;
  description: string;
  installCmd: string;
  githubUrl: string;
}

const { name, description, installCmd, githubUrl } = Astro.props;
---

<div
  class="bg-white border border-neutral-200 rounded-xl p-6 shadow-[var(--shadow-oss)] hover:shadow-[var(--shadow-oss-hover)] transition-all duration-300 hover:-translate-y-0.5 hover:border-neutral-300"
  data-reveal
>
  <!-- Icon -->
  <div class="w-9 h-9 rounded-lg bg-dev-50 flex items-center justify-center">
    <svg class="w-5 h-5 text-dev-500" fill="none" stroke="currentColor" viewBox="0 0 24 24" stroke-width="2">
      <path stroke-linecap="round" stroke-linejoin="round" d="M17.25 6.75L22.5 12l-5.25 5.25m-10.5 0L1.5 12l5.25-5.25m7.5-3l-4.5 16.5"/>
    </svg>
  </div>

  <!-- Gem Name -->
  <h4 class="font-mono text-sm font-semibold text-neutral-950 mt-4 break-all">{name}</h4>

  <!-- Description -->
  <p class="text-sm text-neutral-600 leading-relaxed mt-2">{description}</p>

  <!-- Install Snippet -->
  <div class="mt-4 px-3 py-2.5 rounded-lg bg-neutral-900 font-mono text-xs text-neutral-300 border border-neutral-800 overflow-x-auto">
    <code>gem '{installCmd}'</code>
  </div>

  <!-- Links -->
  <div class="flex items-center gap-3 mt-4 text-xs font-medium">
    <a
      href={githubUrl}
      target="_blank"
      rel="noopener noreferrer"
      class="inline-flex items-center gap-1 text-dev-500 hover:text-dev-600 transition-colors"
      aria-label={`View ${name} on GitHub (opens in new tab)`}
    >
      <svg class="w-3.5 h-3.5" fill="currentColor" viewBox="0 0 24 24">
        <path fill-rule="evenodd" clip-rule="evenodd" d="M12 2C6.477 2 2 6.484 2 12.017c0 4.425 2.865 8.18 6.839 9.504.5.092.682-.217.682-.483 0-.237-.008-.868-.013-1.703-2.782.605-3.369-1.343-3.369-1.343-.454-1.158-1.11-1.466-1.11-1.466-.908-.62.069-.608.069-.608 1.003.07 1.531 1.032 1.531 1.032.892 1.53 2.341 1.088 2.91.832.092-.647.35-1.088.636-1.338-2.22-.253-4.555-1.113-4.555-4.951 0-1.093.39-1.988 1.029-2.688-.103-.253-.446-1.272.098-2.65 0 0 .84-.27 2.75 1.026A9.564 9.564 0 0112 6.844c.85.004 1.705.115 2.504.337 1.909-1.296 2.747-1.027 2.747-1.027.546 1.379.202 2.398.1 2.651.64.7 1.028 1.595 1.028 2.688 0 3.848-2.339 4.695-4.566 4.943.359.309.678.92.678 1.855 0 1.338-.012 2.419-.012 2.747 0 .268.18.58.688.482A10.019 10.019 0 0022 12.017C22 6.484 17.522 2 12 2z"/>
      </svg>
      GitHub
    </a>
  </div>
</div>
