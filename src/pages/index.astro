---
import Layout from '../layouts/Layout.astro';
import Navbar from '../components/Navbar.astro';
import Hero from '../components/Hero.astro';
import Footer from '../components/Footer.astro';
---

<Layout>
  <Navbar />

  <main id="main">
    <Hero />

    <!-- ═══════════════════════════════════ How It Works ═══════════════════════════════════ -->
    <section id="how-it-works" class="bg-white py-16 md:py-24">
      <div class="max-w-[1200px] mx-auto px-5 md:px-8">
        <div class="text-center" data-reveal>
          <span class="text-xs font-semibold uppercase tracking-[0.15em] text-primary-500">How It Works</span>
          <h2 class="text-3xl md:text-4xl font-bold text-dark mt-3">From zero to automated in 5 minutes</h2>
        </div>

        <div class="grid grid-cols-1 md:grid-cols-3 gap-8 mt-16">
          <!-- Step 1 -->
          <div class="relative text-center" data-reveal>
            <div class="w-14 h-14 rounded-2xl bg-primary-500 text-white flex items-center justify-center text-xl font-bold mx-auto">1</div>
            <h3 class="text-xl font-bold text-dark mt-6">Connect</h3>
            <p class="text-base text-grey-dark leading-relaxed mt-3">
              Link your Clover POS and QuickBooks Online with secure OAuth. No passwords stored — ever.
            </p>
          </div>

          <!-- Step 2 -->
          <div class="relative text-center" data-reveal>
            <div class="w-14 h-14 rounded-2xl bg-primary-500 text-white flex items-center justify-center text-xl font-bold mx-auto">2</div>
            <h3 class="text-xl font-bold text-dark mt-6">Map</h3>
            <p class="text-base text-grey-dark leading-relaxed mt-3">
              Your POS categories and payment types are automatically matched to the right QuickBooks accounts. Review and adjust in seconds.
            </p>
          </div>

          <!-- Step 3 -->
          <div class="relative text-center" data-reveal>
            <div class="w-14 h-14 rounded-2xl bg-primary-500 text-white flex items-center justify-center text-xl font-bold mx-auto">3</div>
            <h3 class="text-xl font-bold text-dark mt-6">Automate</h3>
            <p class="text-base text-grey-dark leading-relaxed mt-3">
              Sales sync daily, automatically. Check the dashboard anytime — or just forget about it. Your books stay current.
            </p>
          </div>
        </div>

        <!-- CTA after How It Works -->
        <div class="text-center mt-12" data-reveal>
          <a
            href="https://autobooks.theownerstack.com/users/sign_up"
            class="inline-flex items-center px-8 py-4 rounded-lg bg-primary-500 hover:bg-primary-600 text-white font-semibold text-base transition-all duration-200 hover:-translate-y-0.5"
          >
            Start Your Free Setup
            <svg class="w-5 h-5 ml-2" fill="none" stroke="currentColor" viewBox="0 0 24 24" stroke-width="2">
              <path stroke-linecap="round" stroke-linejoin="round" d="M17 8l4 4m0 0l-4 4m4-4H3"/>
            </svg>
          </a>
        </div>
      </div>
    </section>

    <!-- ═══════════════════════════════════ Features ═══════════════════════════════════ -->
    <section id="features" class="bg-white-ter py-16 md:py-24">
      <div class="max-w-[1200px] mx-auto px-5 md:px-8">
        <div class="text-center" data-reveal>
          <span class="text-xs font-semibold uppercase tracking-[0.15em] text-primary-500">Features</span>
          <h2 class="text-3xl md:text-4xl font-bold text-dark mt-3">Everything you need to automate your bookkeeping</h2>
        </div>

        <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 gap-8 mt-16">
          {[
            {
              title: 'Automatic Daily Sync',
              description: 'Sales data flows from Clover to QuickBooks every day without lifting a finger. Summary or line-item detail — your choice.',
              icon: 'M4 4v5h.582m15.356 2A8.001 8.001 0 004.582 9m0 0H9m11 11v-5h-.581m0 0a8.003 8.003 0 01-15.357-2m15.357 2H15',
            },
            {
              title: 'Smart Category Mapping',
              description: 'Your Clover categories are automatically matched to the right QuickBooks accounts. "Draft Beer" meets "Beverage Sales" without you lifting a finger.',
              icon: 'M9.663 17h4.673M12 3v1m6.364 1.636l-.707.707M21 12h-1M4 12H3m3.343-5.657l-.707-.707m2.828 9.9a5 5 0 117.072 0l-.548.547A3.374 3.374 0 0014 18.469V19a2 2 0 11-4 0v-.531c0-.895-.356-1.754-.988-2.386l-.548-.547z',
            },
            {
              title: 'Multi-Location Support',
              description: 'Running multiple locations? Sync them all from one dashboard. Each location gets its own mappings and sync schedule.',
              icon: 'M19 21V5a2 2 0 00-2-2H7a2 2 0 00-2 2v16m14 0h2m-2 0h-5m-9 0H3m2 0h5M9 7h1m-1 4h1m4-4h1m-1 4h1m-5 10v-5a1 1 0 011-1h2a1 1 0 011 1v5m-4 0h4',
            },
            {
              title: 'Accountant Portal',
              description: 'Invite your bookkeeper or CPA. They get their own portal to manage multiple clients, review mappings, and monitor syncs.',
              icon: 'M17 20h5v-2a3 3 0 00-5.356-1.857M17 20H7m10 0v-2c0-.656-.126-1.283-.356-1.857M7 20H2v-2a3 3 0 015.356-1.857M7 20v-2c0-.656.126-1.283.356-1.857m0 0a5.002 5.002 0 019.288 0M15 7a3 3 0 11-6 0 3 3 0 016 0zm6 3a2 2 0 11-4 0 2 2 0 014 0zM7 10a2 2 0 11-4 0 2 2 0 014 0z',
            },
            {
              title: 'Error Prevention',
              description: 'Built-in validation catches mismatches before they hit your books. No more end-of-month surprises or reconciliation chaos.',
              icon: 'M9 12.75L11.25 15 15 9.75m-3-7.036A11.959 11.959 0 013.598 6 11.99 11.99 0 003 9.749c0 5.592 3.824 10.29 9 11.623 5.176-1.332 9-6.03 9-11.622 0-1.31-.21-2.571-.598-3.751h-.152c-3.196 0-6.1-1.248-8.25-3.285z',
            },
            {
              title: 'Real-Time Progress',
              description: 'Watch your sync happen in real time. Detailed logs, status tracking, and instant notifications if anything needs attention.',
              icon: 'M3 13.125C3 12.504 3.504 12 4.125 12h2.25c.621 0 1.125.504 1.125 1.125v6.75C7.5 20.496 6.996 21 6.375 21h-2.25A1.125 1.125 0 013 19.875v-6.75zM9.75 8.625c0-.621.504-1.125 1.125-1.125h2.25c.621 0 1.125.504 1.125 1.125v11.25c0 .621-.504 1.125-1.125 1.125h-2.25a1.125 1.125 0 01-1.125-1.125V8.625zM16.5 4.125c0-.621.504-1.125 1.125-1.125h2.25C20.496 3 21 3.504 21 4.125v15.75c0 .621-.504 1.125-1.125 1.125h-2.25a1.125 1.125 0 01-1.125-1.125V4.125z',
            },
          ].map((feature) => (
            <div class="bg-white border border-grey-lighter rounded-[12px] p-6 shadow-[var(--shadow-feature)] hover:shadow-[var(--shadow-feature-hover)] transition-all duration-200 hover:-translate-y-2" data-reveal>
              <div class="w-16 h-16 rounded-[16px] bg-primary-50 flex items-center justify-center">
                <svg class="w-7 h-7 text-primary-500" fill="none" stroke="currentColor" viewBox="0 0 24 24" stroke-width="1.5">
                  <path stroke-linecap="round" stroke-linejoin="round" d={feature.icon}/>
                </svg>
              </div>
              <h3 class="text-lg font-semibold text-dark mt-4">{feature.title}</h3>
              <p class="text-sm text-grey-dark leading-relaxed mt-2">{feature.description}</p>
            </div>
          ))}
        </div>
      </div>
    </section>

    <!-- ═══════════════════════════════════ Benefits ═══════════════════════════════════ -->
    <section class="bg-white py-16 md:py-24">
      <div class="max-w-[1200px] mx-auto px-5 md:px-8">
        <div class="grid grid-cols-1 lg:grid-cols-2 gap-12 lg:gap-16 items-center">
          <div data-reveal>
            <span class="text-xs font-semibold uppercase tracking-[0.15em] text-primary-500">Why Switch</span>
            <h2 class="text-3xl md:text-4xl font-bold text-dark mt-3">
              What changes when you stop typing numbers
            </h2>
            <div class="mt-8 space-y-6">
              {[
                { title: 'Eliminate Manual Data Entry', text: 'Your Clover sales flow into QuickBooks every morning before you open the door. No spreadsheets, no re-keying, no weekend catch-up sessions.' },
                { title: 'Accuracy You Can Trust', text: 'Automated sync eliminates transposition errors, missed entries, and end-of-month surprises. Your books match your register.' },
                { title: 'Built for Accountant Workflows', text: 'Invite your bookkeeper. They get their own portal, manage multiple clients, and handle mappings so you don\'t have to.' },
                { title: 'Your Data Stays Yours', text: 'OAuth connections only. We never see your passwords. Data encrypted in transit and at rest.' },
              ].map((benefit) => (
                <div class="flex gap-4">
                  <div class="flex-shrink-0 w-8 h-8 rounded-full bg-primary-50 flex items-center justify-center mt-0.5">
                    <svg class="w-4 h-4 text-primary-500" fill="none" stroke="currentColor" viewBox="0 0 24 24" stroke-width="2.5">
                      <path stroke-linecap="round" stroke-linejoin="round" d="M5 13l4 4L19 7"/>
                    </svg>
                  </div>
                  <div>
                    <h3 class="text-base font-semibold text-dark">{benefit.title}</h3>
                    <p class="text-sm text-grey-dark leading-relaxed mt-1">{benefit.text}</p>
                  </div>
                </div>
              ))}
            </div>
          </div>

          <!-- What syncs -->
          <div class="relative" data-reveal>
            <div class="rounded-[16px] p-8 lg:p-10 bg-white border border-grey-lighter shadow-[var(--shadow-card)]">
              <p class="text-xs font-semibold uppercase tracking-[0.15em] text-primary-500 mb-6">What AutoBooks syncs daily</p>
              <div class="space-y-4">
                {[
                  { label: 'Sales by category', detail: 'Appetizers, Drinks, Entrees — each mapped to the right QuickBooks account' },
                  { label: 'Payment tenders', detail: 'Cash, credit card, gift card — each to its own clearing account' },
                  { label: 'Tips collected', detail: 'Tracked separately as a current liability' },
                  { label: 'Taxes collected', detail: 'Sales tax, VAT, GST — handled per region' },
                  { label: 'Discounts & refunds', detail: 'Contra-revenue entries that keep your books accurate' },
                ].map((item) => (
                  <div class="flex gap-3">
                    <div class="flex-shrink-0 w-6 h-6 rounded-full bg-primary-50 flex items-center justify-center mt-0.5">
                      <svg class="w-3.5 h-3.5 text-primary-500" fill="none" stroke="currentColor" viewBox="0 0 24 24" stroke-width="2.5">
                        <path stroke-linecap="round" stroke-linejoin="round" d="M5 13l4 4L19 7"/>
                      </svg>
                    </div>
                    <div>
                      <p class="text-sm font-semibold text-dark">{item.label}</p>
                      <p class="text-xs text-grey-dark mt-0.5">{item.detail}</p>
                    </div>
                  </div>
                ))}
              </div>
              <div class="mt-6 pt-4 border-t border-grey-lighter text-center">
                <p class="text-xs text-grey-dark">Intuit Approved Integration</p>
              </div>
            </div>
          </div>
        </div>
      </div>
    </section>

    <!-- ═══════════════════════════════════ Pricing ═══════════════════════════════════ -->
    <section id="pricing" class="bg-white-ter py-16 md:py-24">
      <div class="max-w-[1200px] mx-auto px-5 md:px-8">
        <div class="text-center" data-reveal>
          <span class="text-xs font-semibold uppercase tracking-[0.15em] text-primary-500">Pricing</span>
          <h2 class="text-3xl md:text-4xl font-bold text-dark mt-3">Simple, transparent pricing</h2>
          <p class="text-lg text-grey-dark mt-4">Start with a 1-month free trial. Upgrade when you're ready.</p>
        </div>

        <div class="grid grid-cols-1 md:grid-cols-3 gap-8 mt-12 max-w-[1100px] mx-auto">
          <!-- Starter -->
          <div class="bg-white border border-grey-lighter rounded-[16px] p-8 shadow-[var(--shadow-card)]" data-reveal>
            <h3 class="text-lg font-semibold text-dark">Starter</h3>
            <p class="text-sm text-grey-dark mt-1">Perfect for getting started</p>
            <div class="mt-6">
              <span class="text-4xl font-bold text-dark">$15</span>
              <span class="text-grey-dark text-sm">/month</span>
            </div>
            <ul class="mt-8 space-y-3">
              {['1 Clover location', 'Daily sync to QuickBooks', 'Email support', '6-month sync history'].map((item) => (
                <li class="flex items-center gap-3 text-sm text-grey-darker">
                  <svg class="w-5 h-5 text-primary-500 flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24" stroke-width="2">
                    <path stroke-linecap="round" stroke-linejoin="round" d="M5 13l4 4L19 7"/>
                  </svg>
                  {item}
                </li>
              ))}
            </ul>
            <a
              href="https://autobooks.theownerstack.com/users/sign_up"
              class="mt-8 block text-center px-6 py-3 rounded-[6px] border-2 border-grey-lighter hover:border-primary-500 text-grey-darker hover:text-primary-600 font-medium text-sm transition-all duration-200"
            >
              Try Starter Free
            </a>
          </div>

          <!-- Growth -->
          <div class="bg-white border-2 border-primary-500 rounded-[16px] p-8 shadow-[var(--shadow-card-hover)] relative" data-reveal>
            <div class="absolute -top-3 left-1/2 -translate-x-1/2 px-3 py-1 bg-primary-500 text-white text-xs font-semibold rounded-full">
              Recommended
            </div>
            <h3 class="text-lg font-semibold text-dark">Growth</h3>
            <p class="text-sm text-grey-dark mt-1">For multi-location businesses</p>
            <div class="mt-6">
              <span class="text-4xl font-bold text-dark">$25</span>
              <span class="text-grey-dark text-sm">/month</span>
            </div>
            <ul class="mt-8 space-y-3">
              {['Up to 3 Clover locations', 'Daily sync to QuickBooks', 'Priority support', 'Unlimited sync history', 'Multi-user access', 'Accountant portal'].map((item) => (
                <li class="flex items-center gap-3 text-sm text-grey-darker">
                  <svg class="w-5 h-5 text-primary-500 flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24" stroke-width="2">
                    <path stroke-linecap="round" stroke-linejoin="round" d="M5 13l4 4L19 7"/>
                  </svg>
                  {item}
                </li>
              ))}
            </ul>
            <a
              href="https://autobooks.theownerstack.com/users/sign_up"
              class="mt-8 block text-center px-6 py-3 rounded-[6px] bg-primary-500 hover:bg-primary-600 text-white font-medium text-sm transition-all duration-200 hover:-translate-y-0.5"
            >
              Try Growth Free
            </a>
          </div>

          <!-- Accountant Bundle -->
          <div class="bg-white border border-grey-lighter rounded-[16px] p-8 shadow-[var(--shadow-card)]" data-reveal>
            <h3 class="text-lg font-semibold text-dark">Accountant Bundle</h3>
            <p class="text-sm text-grey-dark mt-1">For bookkeepers &amp; CPAs</p>
            <div class="mt-6">
              <span class="text-4xl font-bold text-dark">$60</span>
              <span class="text-grey-dark text-sm">/month</span>
            </div>
            <ul class="mt-8 space-y-3">
              {['Up to 100 client locations', 'Daily sync to QuickBooks', 'Priority support', 'Unlimited sync history', 'Multi-user access', 'Dedicated accountant portal'].map((item) => (
                <li class="flex items-center gap-3 text-sm text-grey-darker">
                  <svg class="w-5 h-5 text-primary-500 flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24" stroke-width="2">
                    <path stroke-linecap="round" stroke-linejoin="round" d="M5 13l4 4L19 7"/>
                  </svg>
                  {item}
                </li>
              ))}
            </ul>
            <a
              href="https://autobooks.theownerstack.com/users/sign_up"
              class="mt-8 block text-center px-6 py-3 rounded-[6px] border-2 border-grey-lighter hover:border-primary-500 text-grey-darker hover:text-primary-600 font-medium text-sm transition-all duration-200"
            >
              Try Accountant Bundle Free
            </a>
          </div>
        </div>

        <p class="text-sm text-grey-dark text-center mt-8" data-reveal>
          All plans include a 30-day free trial. Cancel anytime. No contracts.
        </p>
      </div>
    </section>

    <!-- "Built by Engineers" section removed — moved to /about page.
         Restaurant owners don't need to see gem counts and Rails PRs. -->
  </main>

  <Footer />
</Layout>
